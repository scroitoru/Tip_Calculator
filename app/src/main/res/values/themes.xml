<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style parent="Theme.MaterialComponents.DayNight.DarkActionBar" name="Theme.TipCalculator">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <!--For compatibility-->
        <item name="colorAccent">@color/secondaryColor</item>

        <!--Window Background if you want
        <item name="android:windowBackground">@color/backgroundColoredColor</item>
        -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.TipCalculator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.TipCalculator.NoActionBar.SplashScreenTheme">
        <item name="android:background">@drawable/ic_launcher_background</item>
    </style>
    <style name="Theme.TipCalculator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.TipCalculator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>